import os
from os import system
import re

NGRAMPY_TMP_PATH = "/tmp"
ECHO_SYSTEM = True

def get_new_path(): 
	ind = 1
	while True:
		path = NGRAMPY_TMP_PATH+"/ngrampy-"+str(ind)
		if not os.path.isfile(path): return path
		ind += 1

def line2parts(line, keys=[] ):
		"""
			take a line and return the (tab) split parts, and some subset "key" if we specify it
			
			e.g. line="a\tb\tc\td"
			     keys=[1,4]
			     gives: ["a", "b", "c", "d"], "b\td"
		"""
		parts = re.split('\t', line)
		return parts, "\t".join([parts[x] for x in keys])

def systemcall(x):
	"""
		Call System functions but echo if we want
	"""
	if ECHO_SYSTEM: print x
	system(x)
		
def ifelse(x,y,z):
	if x: return y
	else: return z
		
		
SEP = "\t" # the separator